<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#fff"
    tools:context="com.manoelmotoso.views.VideoAdminActivity">


    <TextView
        android:id="@+id/tvIpAddress"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:hint="______________________________________________________"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <VideoView
        android:id="@+id/fullscreen_video"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignStart="@+id/tvIpAddress"
        android:layout_below="@+id/tvIpAddress"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:keepScreenOn="true"
        android:paddingTop="@dimen/activity_vertical_margin" />

</RelativeLayout>
